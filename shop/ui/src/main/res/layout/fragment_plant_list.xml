<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
		android:id="@+id/tvPlantListTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="16dp"
		android:paddingTop="16dp"
		android:text="Welcome to Nursery"
		android:fontFamily="@font/carmen_heavy"
		android:textColor="@color/mat3_on_bg"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tvPlantListSubTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/carmen_regular"
		android:textColor="@color/mat3_on_bg"
		android:paddingLeft="16dp"
		android:paddingTop="6dp"
		android:text="choose your new green friend."
		android:textSize="16sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tvPlantListTitle" />

	<com.core.ui.views.ButtonG
		android:id="@+id/btnFilterPlantList"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:text="Filter"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="16dp"
		app:buttonType="secondary"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvPlantListSubTitle"/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rvAllPlants"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="16dp"
		android:layout_marginHorizontal="16dp"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnFilterPlantList" />

	<ProgressBar
		android:id="@+id/pbPlantList"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>